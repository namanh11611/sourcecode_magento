<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <reference name="head">
            <action method="setTitle" translate="title"><title>Product List</title></action>
        </reference>
        <referenceContainer name="content">
            <!--Trong content của layout này sẽ hiển thị cả block của list product và form-->
            <block class="Magestore\HelloMagento\Block\ProductList" name="productlist" template="Magento_Catalog::product/list.phtml"/>
            <!--<block class="Magestore\HelloMagento\Block\Form" name="form" template="Magestore_HelloMagento::form.phtml"/>-->
        </referenceContainer>
    </body>
</page>
